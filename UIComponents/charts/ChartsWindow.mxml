<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns:mx="library://ns.adobe.com/flex/mx"
			scriptTimeLimit="60"
			width="400"
			height="250"
			title="Charts"
			creationComplete="initComponent()">

	<fx:Script source="chartsWindow.as" />

	<s:controlBarLayout>
		<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:controlBarLayout>


	<s:controlBarContent>
		<s:Label paddingLeft="3" paddingTop="3">Resolution:</s:Label>
		<s:HSlider id="resolutionSlider" minimum="0" maximum="10000000000000" value="10000" stepSize="0.1" snapInterval="0.1" liveDragging="true" change="updateGraph()"/>
		<mx:Spacer width="100%"/>
		<s:ComboBox id="varSelector" width="130" selectedIndex="0" labelField="name" />
		<s:Button id="addVarButton" width="50" label="Add" click="addVariable()" />
	</s:controlBarContent>


	<s:BorderContainer id="varsContainer" width="100%" height="40"
		backgroundColor="0xf1f1f1" borderColor="0xcccccc">
		<s:layout>
			<s:TileLayout horizontalAlign="left" verticalAlign="top"/>
		</s:layout>
	</s:BorderContainer>

	<mx:AreaChart id="chart" top="40" height="100%" width="100%" showDataTips="true">
		
		<mx:annotationElements>
			<mx:CartesianDataCanvas id="chartAnnotations"/>
		</mx:annotationElements>
		
	</mx:AreaChart>



	<!-- resize handle -->
	<s:Group id="resizeHandle" right="1" bottom="1" width="15" height="15">
		<s:Path data="M 4 13 L 13 4 L 13 13 L 4 13">
			<s:fill>
				<s:SolidColor color="0x333333" />
			</s:fill>
		</s:Path>
	</s:Group>

</s:TitleWindow>
