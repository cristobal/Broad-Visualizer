<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   minWidth="955" 
			   minHeight="600" 
			   xmlns:bienvisto="com.bienvisto.*"
			   applicationComplete="initApp();">
	
	<fx:Style source="visualizer.css" />
	<fx:Script>
		<![CDATA[
			import com.bienvisto.Bienvisto;
			import com.bienvisto.elements.network.graph.Graph;
			import com.bienvisto.elements.network.graph.GraphSearch;
		
			/**
			 * Init app
			 */ 
			private function initApp():void
			{
				new Bienvisto(this, applicationWindow);
				
				var graph:Graph = new Graph();
				graph.addEdge(0, 55, 1);
				graph.addEdge(0, 11, 13);
				
				graph.addEdge(55, 44, 4);
				graph.addEdge(55, 22, 9);
				
				graph.addEdge(11, 55, 2);
				graph.addEdge(11, 22, 1);
				
				graph.addEdge(22, 11, 3);
				graph.addEdge(22, 33, 6);
				
				graph.addEdge(44, 22, 3);
				graph.addEdge(44, 33, 10);
				
				GraphSearch.findShortestPathDijkstra(graph, 0, 33);
			}
		]]>
	</fx:Script>
	<bienvisto:ApplicationWindow id="applicationWindow" />
</s:Application>
